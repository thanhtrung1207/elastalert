pipeline {
    agent any
    stages {
        stage('Setup Environment') {
            steps {
                sh 'python3.8 -m venv venv'
                sh './venv/bin/pip install --no-index --find-links=vendor/ -r requirements.txt --use-pep517'
            }
        }
        stage('Deploy') {
            steps {
                script {
                    def ruleFiles = sh(script: 'ls rules/*.yaml', returnStdout: true).trim().split('\n')

                    for (file in ruleFiles) {
                        sh "./venv/bin/python3.8 -m elastalert.elastalert --verbose --rule ${file}"
                    }
                }
            }
        }
    }
    post {
        always {
            sh 'rm -rf venv'
        }
    }
}
