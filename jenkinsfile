pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                script {
                    docker.build("elastalert:latest", ".")
                }
            }
        }
        stage('Deploy') {
            steps {
                script {
                    sh """
                    docker run -d --name elastalert \
                    -v config.yaml \
                    -v /home/trungtt6/elastalert/rules\
                    elastalert:latest
                    """
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
