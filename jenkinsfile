pipeline {
    agent any

    environment {
        DOCKER_REGISTRY = 'trung3108'
        IMAGE_NAME = 'elastalert_container'
        IMAGE_TAG = 'latest'
        KUBECONFIG_CREDENTIALS_ID = 'kubeconfig-id'
        DOCKER_CREDENTIALS_ID = 'docker-credentials-id'
    }

    stages {
        stage('Build docker image'){
            steps {
                sh '''
                    docker build -t elastalert_container:latest .
                '''
            }
        }

        stage('Push to registry'){
            steps {
                sh '''
                    docker login -u trung3108 -p trunglaso1
                    docker push elastalert_container:latest
                '''
            }
        }
        // stage('Deploy to Kubernetes') {
        //     steps {
        //         script {
        //             sh '''
        //                 kubectl apply -f kubernetes/elastalert-deployment.yaml',
        //             '''
        //         }
        //     }
        // }
    }

    post {
        always {
            cleanWs()
        }
    }
}
