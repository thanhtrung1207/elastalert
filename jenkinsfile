pipeline {
    agent any
    stages {
        stage('Setup Environment') {
            steps {
                sh 'python3.8 -m venv venv'
                sh './venv/bin/pip install --no-index --find-links=vendor/ -r requirements.txt --use-pep517'
            }
        }
        // stage('Test') {
        //     steps {
        //         sh './venv/bin/python -m unittest discover'
        //     }
        // }
        stage('Deploy') {
            steps {
                sh './venv/bin/python3.8 -m elastalert.elastalert --verbose --rule rules/demo.yaml'
            }
        }
    }
    post {
        always {
            sh 'rm -rf venv'
        }
    }
}
